+			_, err = ew.writer.Write([]byte{'\\', 'u', '2', '0', '2', hex[src[i+2]&0xF]})
+		} else {
+			_, err = ew.writer.Write([]byte{c})
+		}
+		if err != nil {
+			return i, err
+		}
+		v := ew.scan.step(ew.scan, c)
+		if v == scanError {
+			return i, ew.scan.err
+		}
+	}
+	return len(src), nil
+}
+
+func (ew *escapeWriter) checkEnd() error {
