+func (ew *escapeWriter) Write(src []byte) (int, error) {
+	for i, c := range src {
+		var err error
+		if ew.escape && (c == '<' || c == '>' || c == '&') {
+			_, err = ew.writer.Write([]byte{'\\', 'u', '0', '0', hex[c>>4], hex[c&0xF]})
