+		} else {
+			e.writer.Write([]byte(f.nameNonEsc))
+		}
+		opts.quoted = f.quoted
+		f.encoder(e, fv, opts)
+	}
+	if next == '{' {
+		e.writer.Write([]byte("{}"))
+	} else {
+		e.writer.Write([]byte{'}'})
+	}
